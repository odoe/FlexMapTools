<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				autoDrawBackground="true"
				dataChange="itemRenderer_dataChangeHandler(event)"
				removedFromStage="itemRenderer_removedFromStageHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.logging.ILogger;
			
			import net.odoe.FlexMapTools.utils.LogUtil;
			
			protected static var logger:ILogger = LogUtil.getLogger(SwatchItemRenderer);
			
			protected var isLoaded:Boolean = false;
			
			protected function itemRenderer_dataChangeHandler(event:FlexEvent):void {
				if (!isLoaded && data) {
					if (data["bmp"]) {
						swatchGroup.addElement(data["bmp"]);
					}
					else {
						swatchGroup.addElement(data["uic"]);
					}
					isLoaded = true;
				}
			}
			
			protected function itemRenderer_removedFromStageHandler(event:Event):void {
				logger.debug("Swatch removed from stage, delete object");
				delete data["bmp"];
				delete data["uic"];
				delete data["description"];
				data = null;
			}
		]]>
	</fx:Script>
	<s:Group width="100%">
		<s:layout>
			<s:HorizontalLayout gap="2"
								verticalAlign="middle"
								paddingBottom="2"
								paddingLeft="2"
								paddingRight="2"
								paddingTop="2" />
		</s:layout>
		<s:Group id="swatchGroup"
				 minHeight="0"
				 width="30">
			<s:layout>
				<s:VerticalLayout gap="2"
								  horizontalAlign="center"
								  verticalAlign="middle" />
			</s:layout>
		</s:Group>
		<s:Label text="{data.description}"
				 fontSize="10"
				 verticalCenter="0" />
	</s:Group>
</s:ItemRenderer>
